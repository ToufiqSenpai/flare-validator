{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node"],
      "module": "CommonJS",
      "moduleResolution": "node",
      // "noImplicitAny": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "strict": false,
      "target": "ES2022",
      "outDir": "dist/cjs",
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "tests"]
}